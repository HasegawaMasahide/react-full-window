{
  "compilerOptions": {
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "commonJS",
    "esModuleInterop": true,
    "target": "es2017",
    "strict": true,
    "isolatedModules": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
